def dfs(i,f):
  if i == n-1:
    return(sum(list(map(int,f.split("+")))))
  return dfs(i+1,f+s[i+1]) + dfs(i + 1, f + "+" + s[i + 1])


s=input()
n=len(s)
print(dfs(0, s[0]))

################

def dfs(i,f,sum):
  if i == n-1:
    if sum ==7:
      return print(f,"=7")
      exit()
      
  else:
    dfs(i + 1, f + "+" + s[i + 1], sum+int(s[i+1]))
    dfs(i + 1, f + "-" + s[i + 1], sum-int(s[i+1]))



s=input()
n=len(s)
dfs(0, s[0],int(s[0]))
